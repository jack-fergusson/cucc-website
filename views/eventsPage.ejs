<%- include('header.ejs') %>

<body>

    <div class="centerer">
        <h1>EVENTS</h1>

        <div class="Events-container">
            <h2>2025</h2>
            <hr>
            <div class="Events-bar-section">

                <div class="Events-bar" onclick="navigateTo('/RapidOpen2025')" style="background-image: url('images/stauffer.jpg')">
                    <h3>Queen's Chess Rapid Open</h3>
                    <p class="event-details">
                        📍 Queen's University, Kingston, ON<br>
                        📅 October 25, 10:00 AM<br>
